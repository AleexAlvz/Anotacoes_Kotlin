<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:contentDescription="@string/image_user"
        android:id="@+id/image_user"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_usuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_input_perfil_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_user"
        tools:text="Nome do usuario"
        android:textStyle="bold"
        android:textColor="@color/black" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_dados_pessoais_perfil"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/text_input_perfil_nome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/background_item">

        <TextView
            android:id="@+id/text_perfil_dados_cadastrais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dados cadastrais"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:textSize="30sp" />

        <ImageButton
            android:contentDescription="@string/button_edit_cadastro"
            android:id="@+id/image_button_edit_dados_cadastrais"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_edit"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toEndOf="@id/text_perfil_dados_cadastrais"
            app:layout_constraintTop_toTopOf="@id/text_perfil_dados_cadastrais"
            app:layout_constraintBottom_toBottomOf="@id/text_perfil_dados_cadastrais"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:id="@+id/container_dados_cpf"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/text_perfil_dados_cadastrais">

            <TextView
                android:id="@+id/text_perfil_cpf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CPF: "
                android:textSize="20sp" />

            <TextView
                android:id="@+id/text_input_perfil_cpf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="xxx.xxx.xxx-xx"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_dados_email"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/container_dados_cpf">

            <TextView
                android:id="@+id/text_perfil_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email: "
                android:textSize="20sp" />

            <TextView
                android:id="@+id/text_input_perfil_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="teste@gmail.com"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_dados_nascimento"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/container_dados_email">

            <TextView
                android:id="@+id/text_perfil_nascimento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data de nascimento: "
                android:textSize="20sp" />

            <TextView
                android:id="@+id/text_input_perfil_nascimento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="xx/xx/xxxx"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_dados_telefone"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/container_dados_nascimento">

            <TextView
                android:id="@+id/text_perfil_telefone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telefone: "
                android:textSize="20sp" />

            <TextView
                android:id="@+id/text_input_perfil_telefone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="(xx) xxxx-xxxx"
                android:textSize="20sp" />

        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/perfil_fragment_button_logout"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/text_button_logout"
        android:textColor="@color/white"
        android:background="@drawable/button_logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="50dp"
        app:layout_constraintTop_toBottomOf="@id/container_dados_pessoais_perfil"/>

</androidx.constraintlayout.widget.ConstraintLayout>